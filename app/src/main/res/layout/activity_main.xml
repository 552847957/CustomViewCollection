<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

  <com.bigeye.customviewcollection.customview.SimpleView
      android:id="@+id/simple_view"
      android:layout_width="200dp"
      android:layout_height="200dp"
      android:visibility="gone"/>

  <com.bigeye.customviewcollection.customview.HexagonCapacityView
      android:id="@+id/capacity_view"
      android:layout_width="200dp"
      android:layout_height="200dp"
      android:layout_below="@+id/simple_view"
      android:layout_marginTop="10dp"
      android:visibility="gone"/>
  <com.bigeye.customviewcollection.customview.ScratchCardView
      android:layout_width="200dp"
      android:layout_height="200dp"
      android:visibility="gone"/>

  <com.bigeye.customviewcollection.customview.SearchView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />


</RelativeLayout>
